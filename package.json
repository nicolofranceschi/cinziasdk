{
  "name": "test-npm-package",
  "version": "0.1.0",
  "description": "Test npm package",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.config.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GiovanniIncammicia/test-npm-package.git"
  },
  "keywords": [
    "boilerplate",
    "typescript"
  ],
  "author": "Giovanni Incammicia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GiovanniIncammicia/test-npm-package/issues"
  },
  "homepage": "https://github.com/GiovanniIncammicia/test-npm-package#readme",
  "devDependencies": {
    "@types/jest": "29.5.6",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "eslint": "8.51.0",
    "eslint-plugin-jest": "27.4.2",
    "jest": "29.7.0",
    "prettier": "3.0.3",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "files": [
    "lib/**/*"
  ]
}
